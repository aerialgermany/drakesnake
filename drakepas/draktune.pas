Program Drake_Tuner;

Uses Crt;

Const LaengeS : Array[0..2] of Byte = (20,40,10);
      Schiess         = 0;
      Getroffen       = 1;
      BombeExplodiert = 2;
      Daten     : Array[0..2,0..40] of Word =
      ((0100,0000,0200,0000,0600,0000,1100,0000,1800,0000,
        2000,0000,1500,0000,1000,0000,0350,0000,0200,0000,
        0000,0000,0000,0000,0000,0000,0000,0000,0000,0000,
        0000,0000,0000,0000,0000,0000,0000,0000,0000,0000,0000),
       (0000,0000,0000,0000,0000,0000,0000,0000,0000,0000,
        0000,0000,0000,0000,0000,0000,0000,0000,0000,0000,
        0000,0000,0000,0000,0000,0000,0000,0000,0000,0000,
        0000,0000,0000,0000,0000,0000,0000,0000,0000,0000,0000),
       (0000,0000,0000,0000,0000,0000,0000,0000,0000,0000,
        0000,0000,0000,0000,0000,0000,0000,0000,0000,0000,
        0000,0000,0000,0000,0000,0000,0000,0000,0000,0000,
        0000,0000,0000,0000,0000,0000,0000,0000,0000,0000,0000));


Var  SoundDat   : Array[0..2,0..40] of Word;
     i,a,k,l    : Word;

Begin
  For i:=0 to 2 do
    For a:=0 to 40 do
      SoundDat[i,a]:=Daten[i,a];
  i:=0;
  a:=Schiess;
  Repeat
    Sound(SoundDat[a,i]);
    Delay(30);
    Inc(i);
  Until i>=LaengeS[a];
  NoSound;
End.